@if(Request.IsAuthenticated) {
    <text>Benvenuto <strong>@User.Identity.Name</strong>!
    <br />
    @GetProfileInfo()
    [ @Html.ActionLink("Log Off", "LogOff", "Account", new { area = "" }, null) ]</text>
}
else {
    @:[ @Html.ActionLink("Log On", "LogOn", "Account", new { area = "" }, null) ]
}


@helper GetProfileInfo()
{
    string matricola = Context.Profile.GetPropertyValue("Matricola").ToString();
    string nome = Context.Profile.GetPropertyValue("Nome").ToString();
    string area = Context.Profile.GetPropertyValue("Area").ToString();
    
    <span>#@matricola : @nome [@area] </span>
}